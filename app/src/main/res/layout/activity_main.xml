<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:columnCount="3">

        <Button
            android:id="@+id/buttonR0C0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp" />

        <Button
            android:id="@+id/buttonR1C0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonR2C0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonR0C1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonR1C1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonR2C1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonR0C2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonR1C2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonR2C2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="tileClicked"
            android:textSize="64sp"
            app:layout_column="2"
            app:layout_row="2" />
    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="resetClicked"
        android:text="Reset" />
</LinearLayout>